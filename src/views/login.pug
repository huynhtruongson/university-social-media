doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6', crossorigin='anonymous')
        link(rel='preconnect', href='https://fonts.gstatic.com')
        link(href='https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;700&display=swap', rel='stylesheet')
        link(rel='stylesheet', href='https://pro.fontawesome.com/releases/v5.10.0/css/all.css', integrity='sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p', crossorigin='anonymous')
        link(rel="stylesheet", href="/stylesheets/style.css")
        title Login
    body 
        .login-page 
            .login-container 
                .login-form 
                    img.login-form__logo(src="/images/tdtu-logo.jpg", alt="")
                    h2.login-form__title Welcome Back
                    a.login-form__google(href="/auth/google")
                        img.login-form__google-icon(src="/images/google-icon.jpg", alt="")
                        | Login with Google
                    .login-form__divider ADMIN OR DEPARTMENT/FACULTY
                    form.login-form__form
                        .login-form__form-group
                            input.login-form__input(type="text" name= 'username' autocomplete="off" placeholder='Username')
                            .login-form__error.login-form__error--username
                        .login-form__form-group
                            input.login-form__input(type="password" name= 'password' autocomplete="off" placeholder='Password')
                            .login-form__error.login-form__error--password
                        a.login-form__forgotpwd(href="#") Forgot password ? 
                        button.login-form__btn(type='submit')
                            | Login
                            i.fas.fa-long-arrow-alt-right.login-form__btn-icon
                .login-wallpaper
                    img.login-wallpaper__img(src="/images/login-wallpaper.jpg", alt="")
        if failed
            .modal.fade#modalLoginFailed(tabindex='-1')
                .modal-dialog
                    .modal-content
                        .modal-header
                            h2.modal-title.text-danger Login failed !
                            button.btn-close(type='button', data-bs-dismiss='modal', aria-label='Close')
                        .modal-body
                            h3 Vui lòng đăng nhập bằng email sinh viên.
                        .modal-footer
                            button.btn.btn-primary.btn-lg(type='button',data-bs-dismiss='modal') Close
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js', integrity='sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf', crossorigin='anonymous')
        script(src='https://code.jquery.com/jquery-3.6.0.js', integrity='sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=', crossorigin='anonymous')
        script(src='https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js')
        script(src="https://university-social-media.herokuapp.com/socket.io/socket.io.js")
        script(src="/javascripts/main.js") 