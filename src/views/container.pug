doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        block link 
            link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6', crossorigin='anonymous')
            link(rel='preconnect', href='https://fonts.gstatic.com')
            link(href='https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;700&display=swap', rel='stylesheet')
            link(rel='stylesheet', href='https://pro.fontawesome.com/releases/v5.10.0/css/all.css', integrity='sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p', crossorigin='anonymous')
            link(rel="stylesheet", href="/stylesheets/style.css")
        block title 
    body 
        .header 
            .container.header-content
                .header-title
                    button.header-menu__btn(type='button')
                        i.fas.fa-bars.header-menu__btn-icon
                    a.header-title__link(href='/')
                        img.header-title__logo(src="/images/tdtu-logo.jpg", alt="")
                    h2.header-title__name Trường Đại Học Tôn Đức Thắng
                a.header-user(href=`/profile/${currentUser._id}`,data-id=currentUser._id,data-role=currentUser.role) 
                    img.header-user__avatar(src=currentUser.avatar ? `https://res.cloudinary.com/sonhn/image/upload/${currentUser.avatar}` : "/images/user-avatar.png", alt="")
                    h4.header-user__name= currentUser ? currentUser.display_name : ''
        .container-content.container
            .navigation-bar-container
                .navigation-bar
                    ul.navbar-list 
                        li.navbar-item 
                            .navbar-item__row.navbar-item__user
                                a.navbar-item__link(href=`/profile/${currentUser._id}`) 
                                    img.navbar-item__avatar(src=currentUser.avatar ? `https://res.cloudinary.com/sonhn/image/upload/${currentUser.avatar}` : "/images/user-avatar.png", alt="")
                                    h4.navbar-item__name= currentUser ? currentUser.display_name : ''
                                i.fas.fa-chevron-right.navbar-item__icon
                        if currentUser.role === 2
                            li.navbar-item 
                                .navbar-item__row
                                    a.navbar-item__link-logout(href='/admin') 
                                        h4.navbar-item__title Quản lý tài khoản
                                        i.fas.fa-chevron-right.navbar-item__icon
                        if currentUser.role === 1
                            li.navbar-item 
                                .navbar-item__row
                                    a.navbar-item__link-logout(href='/department') 
                                        h4.navbar-item__title Quản lý thông báo
                                        i.fas.fa-chevron-right.navbar-item__icon
                        li.navbar-item 
                                .navbar-item__row
                                    a.navbar-item__link-logout(href='/notification') 
                                        h4.navbar-item__title Tất cả thông báo
                                        i.fas.fa-chevron-right.navbar-item__icon
                        li.navbar-item 
                            .navbar-item__row.navbar-item__dropdown(data-position='department') 
                                h4.navbar-item__title Thông báo từ phòng ban 
                                i.fas.fa-chevron-right.navbar-item__icon
                            .navbar-item__children
                                ul.navbar-sub-list 
                                    if categoryList.department
                                        each category in categoryList.department
                                            li.navbar-sub-item
                                                a.navbar-sub-item__link(href=`/notification?category=${category}`)=category
                        li.navbar-item 
                            .navbar-item__row.navbar-item__dropdown(data-position='falcuty')
                                h4.navbar-item__title Thông báo từ khoa
                                i.fas.fa-chevron-right.navbar-item__icon
                            .navbar-item__children
                                ul.navbar-sub-list 
                                    if categoryList.faculty
                                        each category in categoryList.faculty
                                            li.navbar-sub-item
                                                a.navbar-sub-item__link(href=`/notification?category=${category}`)=category
                        li.navbar-item 
                            .navbar-item__row
                                a.navbar-item__link-logout(href='/auth/logout') 
                                    h4.navbar-item__title Đăng xuất
                                    i.fas.fa-sign-out-alt.navbar-item__icon
            .navigation-bar__overlay
            .navigation-bar-tablet
                button.btn-close.navigation-bar__btn-close(type="button")
                ul.navbar-list 
                    li.navbar-item 
                        .navbar-item__row.navbar-item__user
                            a.navbar-item__link(href=`/profile/${currentUser._id}`) 
                                img.navbar-item__avatar(src=currentUser.avatar ? `https://res.cloudinary.com/sonhn/image/upload/${currentUser.avatar}` : "/images/user-avatar.png", alt="")
                                h4.navbar-item__name= currentUser ? currentUser.display_name : ''
                            i.fas.fa-chevron-right.navbar-item__icon
                    if currentUser.role === 2
                        li.navbar-item 
                            .navbar-item__row
                                a.navbar-item__link-logout(href='/admin') 
                                    h4.navbar-item__title Quản lý tài khoản
                                    i.fas.fa-chevron-right.navbar-item__icon
                    if currentUser.role === 1
                        li.navbar-item 
                            .navbar-item__row
                                a.navbar-item__link-logout(href='/department') 
                                    h4.navbar-item__title Quản lý thông báo
                                    i.fas.fa-chevron-right.navbar-item__icon
                    li.navbar-item 
                            .navbar-item__row
                                a.navbar-item__link-logout(href='/notification') 
                                    h4.navbar-item__title Tất cả thông báo
                                    i.fas.fa-chevron-right.navbar-item__icon
                    li.navbar-item 
                        .navbar-item__row.navbar-item__dropdown(data-position='department') 
                            h4.navbar-item__title Thông báo từ phòng ban 
                            i.fas.fa-chevron-right.navbar-item__icon
                        .navbar-item__children
                            ul.navbar-sub-list 
                                if categoryList.department
                                    each category in categoryList.department
                                        li.navbar-sub-item
                                            a.navbar-sub-item__link(href=`/notification?category=${category}`)=category
                    li.navbar-item 
                        .navbar-item__row.navbar-item__dropdown(data-position='falcuty')
                            h4.navbar-item__title Thông báo từ khoa
                            i.fas.fa-chevron-right.navbar-item__icon
                        .navbar-item__children
                            ul.navbar-sub-list 
                                if categoryList.faculty
                                    each category in categoryList.faculty
                                        li.navbar-sub-item
                                            a.navbar-sub-item__link(href=`/notification?category=${category}`)=category
                    li.navbar-item 
                        .navbar-item__row
                            a.navbar-item__link-logout(href='/auth/logout') 
                                h4.navbar-item__title Đăng xuất
                                i.fas.fa-sign-out-alt.navbar-item__icon
            .main-content
                block body
        .toast-box.position-fixed.bottom-0.start-0.p-4
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js', integrity='sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf', crossorigin='anonymous')
        script(src='https://code.jquery.com/jquery-3.6.0.js', integrity='sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=', crossorigin='anonymous')
        script(src='https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js')
        script(src="https://university-social-media.herokuapp.com/socket.io/socket.io.js")
        block javascript
            script(src="/javascripts/main.js") 

        